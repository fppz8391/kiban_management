<%- model_class = Kiban -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:id) %>:</strong></dt>
  <dd><%= @maker.id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:メーカー) %>:</strong></dt>
  <dd><%= @maker.メーカー %></dd>
  <dt><strong><%= model_class.human_attribute_name(:期限) %>:</strong></dt>
  <dd><%= @maker.期限 %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              maker_deadlines_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_maker_deadline_path(@maker), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              maker_deadline_path(@maker),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
