<table id = "kibans">
  <thead>
    <tr>
      <th>経過日</th>
      <th>基板名</th>
      <th>最終注文日</th>
      <th>メーカー</th>
      <th>終了</th>
      <th width = 100>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kibans2.each do |kiban|
      if(kiban.経過日 >= 0) then
          @progress = "残り#{kiban.経過日}日";
          @color = "orange"
        else
          @progress ="#{-kiban.経過日}日経過";
          @color = "red"
        end%>


      <tr>
        <td><font color = <%= @color %>><%= @progress%> </font></td>
        <td><%= kiban.基板名 %></td>
        <td><%= kiban.最終注文日 %></td>
        <td><%= kiban.メーカー %></td>
        <td><%= check_box_tag 'kiban[check]', true, kiban.終了, {
          onchange: '$(this).data("params", "kiban[check]=" + !this.終了)',
    data: {
        url: kiban_path(kiban),
        method: :post,
        remote: true,
        data: {'終了': !kiban.終了}
    }
} %></td>
        <td><%= kiban.備考 %></td>
        <td><%= link_to 'Show', kiban %></td>
        <td><%= link_to 'Edit', edit_kiban_path(kiban) %></td>
        <td><%= link_to 'Destroy', kiban, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<br>
