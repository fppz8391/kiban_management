<%= simple_form_for @kiban, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :基板名 %>
  <%= f.input :最終注文日,start_year: 2000, end_year: Date.today.year  %>
  メーカー<br>
  <%= f.select :メーカー,options_from_collection_for_select(MakerDeadline.order(メーカー: :desc), :メーカー, :メーカー, :selected => @kiban.メーカー) %> <%#:include_blankを入れないのはそのまま基板作成するとエラーが起こるため%>
  <%#メーカーに登録されているもののみ選択肢に出てくるようにするためoptions_fromを使用%>
  <br>
  <br>
  <%= f.input:終了, as: :boolean%>
  <%= f.input :備考%>
  <%= f.button :submit,"登録", :class => 'btn-primary',data: {turbolinks: false} %>
  <%= link_to "戻る" , :back ,data: {turbolinks: false}%><%#遷移後のjavascript無効をさせないため%>
<% end %>
